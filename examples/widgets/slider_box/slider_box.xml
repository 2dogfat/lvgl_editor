<widget>
    <api>
		<prop name="title">
            <param name="title" type="string"/>
        </prop>
	</api>
    <styles>
        <style name="main" 
               bg_color="0x666666" bg_opa="255" 
               border_width="2" border_color="0xaaaaaa" 
               radius="3"
               width="250" height="100"
               layout="flex"
               flex_flow="column"/> 
    </styles>
    <view extends="lv_obj" 
          styles="main"
          align="center"> 

        <lv_label align="top_mid" text="$title" width="80%" long_mode="scroll"/>
        <lv_obj width="50%" height="content" flex_flow="row" style_bg_opa="200">
            <lv_button width="30"  height="30">
                <lv_label text="-"/>
            </lv_button>
            <dark_slider align="top_mid" y="30"/>
            <lv_button width="30"  height="30" text="+">
                <lv_label text="+"/>
            </lv_button>
        </lv_obj>
    </view>
</widget>
